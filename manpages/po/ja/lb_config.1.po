#, no-wrap
msgid "B<auto/config>"
msgstr "B<auto/config>"

#. type: IP
#: en/lb_config.1:469
#, no-wrap
msgid "B</etc/live/build.conf, /etc/live/build/*>"
msgstr "B</etc/live/build.conf, /etc/live/build/*>"

